.cart-item{
  position: relative;
  width: 100%;
  height: 220rpx;
  background-color: #fff;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  border-top:1rpx #f1f1f1 solid;
  border-bottom:1rpx #f1f1f1 solid;
}
.cart-item .content{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.cart-item .content .goodsFont{
  width: 240rpx;
  padding: 0 10rpx;
  font-size: 30rpx
}
.cart-item .content .goodsFont .name{
  width: 100%;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.cart-item .content .goodsFont .price{
  margin-top: 20rpx;
  color: #327442;
}
.cart-item image{
  width: 140rpx;
  height: 140rpx;
}
.cart-item .content .count-box .count{
  font-size: 40rpx;
  color: #327442;
}
.cart-item .content .count-box .reduce,.add{
  font-size: 60rpx;
  line-height: 50rpx;
  margin-bottom: 10rpx;
  color: #327442;
}
.cart-item .del{
  position: absolute;
  right: 20rpx;
  font-size: 35rpx;
  color: red;
}