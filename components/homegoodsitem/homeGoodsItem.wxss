.home-goods-item {
  width: 350rpx;
  margin-top: 15rpx;
  background-color: #fff;
  box-shadow: 0px 0px 4rpx rgba(0, 0, 0, 0.3),
    0px 0px 40rpx rgba(169, 160, 160, 0.1) inset;
}

.home-goods-item .content image {
  width: 100%;
  height: 400rpx;
}

.home-goods-item .content .font {
  padding: 10rpx;
  background-color: #fff;
}

.home-goods-item .content .font .name {
  font-size: 31rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.home-goods-item .content .font .price {
  color: #327442;
  margin-top: 8rpx;
  font-size: 30rpx;
}

.home-goods-item .content .font .text {
  position: relative;
  width: 100%;
  display: flex;
  justify-content: space-between;
  font-size: 25rpx;
  margin-top: 10rpx;
  color: #5b5959;
}
.home-goods-item .content .font .text view:nth-child(1){
  position: relative;
}
.home-goods-item .content .font .text view:nth-child(1) image{
  width: 30rpx;
  height: 30rpx;
}
.home-goods-item .content .font .text view:nth-child(1) text{
  position: absolute;
  top: 0rpx;
  left: 35rpx;
}
.home-goods-item .content .font .text view:nth-child(2) image{
  width: 30rpx;
  height: 30rpx;
}
.home-goods-item .content .font .text view:nth-child(2) text{
  margin-left: 10rpx;
}