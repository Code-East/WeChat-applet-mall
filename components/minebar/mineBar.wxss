.mine-bar{
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
}
.mine-bar  .content{
  width: 100%;
  height: 220rpx;
  background-color: #ffffff;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  box-shadow:3rpx 3rpx 8rpx 8rpx rgba(220, 235, 230, 0.5);
}
.mine-bar .content .ding{
  font-size: 30rpx;
}
.mine-bar .content .icon-list{
  font-size: 30rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}
.mine-bar .content .icon-list .icon-item{
  display: flex;
  flex-direction: column;
}
.mine-bar .content .icon-list .icon-item image{
  width: 80rpx;
  height: 80rpx;
}