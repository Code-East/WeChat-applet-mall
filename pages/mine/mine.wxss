#mine {
  width: 100%;
  position: relative;
}

#mine .mine-content {
  width: 100%;
  background-color: #fff;
}

#mine .mine-content .header {
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 370rpx;
  background-color: #dcebe6;
  border: 1rpx solid transparent;
  background-repeat: no-repeat !important;
  background-position: center center !important;
  background-size: 100% 100% !important;
  opacity: 0.2;
}

#mine .mine-content .name {
  margin-top: 20rpx;
  font-size: 40rpx;
}

#mine .mine-content .header-box {
  position: relative;
}

#mine .mine-content .user-header {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  z-index: 10;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
  align-items: center;
}

#mine .mine-content .user-header image {
  width: 160rpx;
  height: 160rpx;
}

#mine .mine-content .btn {
  width: 200rpx;
  height: 90rpx;
  border: 1rpx solid #111111;
  background-color: #fff;
  border-radius: 40rpx;
  text-align: center;
  font-size: 35rpx;
  color: #111111;
  margin-top: 20rpx;
}

#mine .address {
  width: 100%;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
}

#mine .address .content {
  height: 70rpx;
  /* background-color: saddlebrown; */
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f3f3f3;
  padding-bottom: 20rpx;
}

#mine .address .content image {
  width: 50rpx;
  height: 50rpx;
}

#mine .address .content text {
  font-size: 30rpx;
  margin-left: 20rpx;
}